{
    "description": "Space API 0.13",
    "type": "object",
    "properties": {
        "api": {
            "description": "the space api version you use",
            "type": "string",
            "required": true,
            "enum": ["0.13"]
        },
        "space": {
            "description": "the space name",
            "type": "string",
            "required": true
        },
        "logo": {
            "description": "your space logo",
            "type": "string",
            "required": true
        },
        "url": {
            "description": "your main website",
            "required": true,
            "type": "string"
        },
        "location": {
            "required": true,
            "type": "object",
            "properties": {
                "address": {
                    "description": "the space address",
                    "required": false,
                    "type": "string"
                },
                "lat": {
                    "description": "latitude of your space location",
                    "required": true,
                    "type": "number"
                },
                "lon": {
                    "description": "longitude of your space location",
                    "required": true,
                    "type": "number"
                }
            }
        },
        "cam": {
            "required": false,
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "stream": {
            "required": false,
            "type": "object"
        },
        "status": {
            "description": "a collection of status-related data",
            "required": true,
            "type": "object",
            "properties": {
                "open": {
                    "required": true,
                    "type": "boolean"
                },
                "lastchange": {
                    "description": "at what (unix) timestamp has your space status lastly changed?",
                    "required": false,
                    "type": "number"
                },
                "message": {
                    "description": "a free-form string something like 'open for public', 'members only' or whatever you want it to be)",
                    "required": false,
                    "type": "string"
                },
                "icon": {
                    "description": "icons that show the status graphically",
                    "type": "object",
                    "required": false,
                    "properties": {
                        "open": {
                            "description": "this could be your customized space logo showing an open space",
                            "type": "string",
                            "required": true
                        },
                        "closed": {
                            "description": "this could be your customized space logo showing a closed space",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "events": {
            "required": false,
            "type": "array",
            "items": {
                "required": false,
                "type": "object",
                "properties": {
                    "name": {
                        "required": true,
                        "type": "string"
                    },
                    "type": {
                        "required": true,
                        "type": "string"
                    },
                    "t": {
                        "required": true,
                        "type": "number"
                    },
                    "extra": {
                        "required": false,
                        "type": "string"
                    }
                }
            }
        },
        "contact": {
            "required": false,
            "type": "object",
            "properties": {
                "phone": {
                    "required": false,
                    "type": "string"
                },
                "sip": {
                    "required": false,
                    "type": "string"
                },
                "keymaster": {
                    "required": false,
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "irc": {
                    "required": false,
                    "type": "string"
                },
                "twitter": {
                    "required": false,
                    "type": "string"
                },
                "email": {
                    "required": true,
                    "type": "string"
                },
                "ml": {
                    "required": false,
                    "type": "string"
                },
                "jabber": {
                    "required": false,
                    "type": "string"
                }
            }
        },
        "sensors": {
            "required": false,
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "temp": {
                        "required": false,
                        "type": "object"
                    }
                }
            }
        },
        "feeds": {
            "required": false,
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "required": true,
                        "type": "string"
                    },
                    "type": {
                        "required": false,
                        "type": "string"
                    },
                    "url": {
                        "required": true,
                        "type": "string"
                    }
                }
            }
        },
        "cache": {
            "description": "use the cache if you want avoid hundreds/thousands of app instances crawling your space status. Just choose a cache update cycle (m = minutes, h = hours, d = days)",
            "required": false,
            "type": "object",
            "properties": {
                "schedule": {
                    "type": "string",
                    "required": true,
                    "enum": ["m.02", "m.05", "m.10"]
                }
            }
        }        
    }
}